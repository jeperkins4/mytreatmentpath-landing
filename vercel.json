{
  "buildCommand": "echo 'No build needed - static HTML'",
  "outputDirectory": ".",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/download",
      "destination": "https://github.com/jeperkins4/medical-research-tracker/releases/latest",
      "permanent": false
    },
    {
      "source": "/github",
      "destination": "https://github.com/jeperkins4/medical-research-tracker",
      "permanent": false
    }
  ]
}
